<div class="container">
  <h1>User Details</h1>

  <dl class="row">
    <dt class="col-sm-3">Full Name</dt>
    <dd class="col-sm-9"><%= @user.full_name %></dd>

    <dt class="col-sm-3">Email</dt>
    <dd class="col-sm-9"><%= @user.email %></dd>

    <dt class="col-sm-3">Role</dt>
    <dd class="col-sm-9"><%= @user.role %></dd>
  </dl>

  <%= link_to "Edit", edit_user_path(@user), class: "btn btn-primary mr-2" %>
  <%= link_to "Back", users_path, class: "btn btn-secondary mr-2" %>
  
  <%= button_to "Delete", user_path(@user), method: :delete, data: { confirm: "Are you sure you want to delete this user?" }, class: "btn btn-danger" %>
</div>
