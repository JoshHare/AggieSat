
<div class="container mt-4">
  <h1 class="mb-4">Add New Member</h1>

  <%= form_with(model: @user, url: manage_members_path, method: :post) do |form| %>
    
    <div class="form-group">
      <%= form.label :full_name %>
      <%= form.text_field :full_name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :email %>
      <%= form.email_field :email, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :role %>
      <%= form.select :role, ["Admin", "Member"], {}, class: "form-control" %>
    </div>

    <%= form.submit "Add Member", class: "btn btn-primary" %>
  <% end %>
</div>
